<h2 class="text-center">Editar Usuario</h2>
<section class="signup-step-container">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-md-8">
                <div class="wizard">
                    <div class="wizard-inner">
                        <div class="connecting-line"></div>
                        <ul class="nav nav-tabs" role="tablist">
                            <li role="presentation" class="active" id="step1">
                                <a href="#ventas" data-toggle="tab" aria-controls="ventas" role="tab" aria-expanded="true"><span class="round-tab">1 </span> <i>Step 1</i></a>
                            </li>
                            <li role="presentation" class="disabled" id="step2">
                                <a href="#facturacion" data-toggle="tab" aria-controls="facturacion" role="tab" aria-expanded="false"><span class="round-tab">2</span> <i>Step 2</i></a>
                            </li>
                            <li role="presentation" class="disabled" id="step3">
                                <a href="#contacto" data-toggle="tab" aria-controls="contacto" role="tab"><span class="round-tab">3</span> <i>Step 3</i></a>
                            </li>
                            <li role="presentation" class="disabled" id="step4">
                                <a href="#resumen" data-toggle="tab" aria-controls="resumen" role="tab"><span class="round-tab">4</span> <i>Step 4</i></a>
                            </li>
                        </ul>
                    </div>

                    <form role="form" action="index.html" class="login-box">
                        <input type="hidden" id="Id" value="@Model.Id" />
                        <div class="tab-content" id="main_form">
                            <div class="tab-pane active" role="tabpanel" id="ventas">
                                <h4 class="text-center">Ventas</h4>
                                <div class="form-group">
                                    <label>Monto</label>
                                    <input type="text" asp-for="Monto" class="form-control" name="monto" value="@Model.Monto" />                           
                                    <span class="hide" style="color:red;">Requerido</span>
                                </div>
                                <div class="form-group">
                                    <label>Descripcion</label>
                                    <input type="text" asp-for="Descripcion" class="form-control" name="descripcion" />
                                    <span class="hide" style="color:red;">Requerido</span>
                                </div>
                                <div class="form-group">
                                    <label>IVA</label>
                                    <input type="text" asp-for="IVA" class="form-control" name="iva" />
                                    <span class="hide" style="color:red;">Requerido</span>
                                </div>
                                <div class="form-group">
                                    <label>Total</label>
                                    <input type="text" asp-for="Total" class="form-control" name="total" />
                                    <span class="hide" style="color:red;">Requerido</span>
                                </div>
                                <ul class="list-inline pull-right">
                                    <li><button type="button" class="default-btn next-step">Continuar</button></li>
                                </ul>
                            </div>

                            <div class="tab-pane" role="tabpanel" id="facturacion">
                                <h4 class="text-center">Facturación</h4>
                                <div class="form-group">
                                    <label>Nombre o Razón Social</label>
                                    <input type="text" asp-for="RazonSocial" class="form-control" name="razon_social" />
                                    <span class="hide" style="color:red;">Requerido</span>
                                </div>
                                <div class="form-group">
                                    <label>RFC</label>
                                    <input type="text" asp-for="RFC" class="form-control" name="rfc" />
                                    <span class="hide" style="color:red;">Requerido</span>
                                </div>
                                <div class="form-group">
                                    <label>Domicilio Fiscal</label>
                                    <input type="text" asp-for="DomicilioFiscal" class="form-control" name="domicilio_fiscal" />
                                    <span class="hide" style="color:red;">Requerido</span>
                                </div>
                                <div class="form-group">
                                    <label>Telefono</label>
                                    <input type="text" asp-for="Telefono" class="form-control" name="telefono_facturacion" />
                                    <span class="hide" style="color:red;">Requerido</span>
                                </div>
                                <div class="form-group">
                                    <label>Correo Electronico</label>
                                    <input type="text" asp-for="CorreoElectronico" class="form-control" name="correo_facturacion" />                                   
                                    <span class="hide" style="color:red;">Requerido</span>
                                </div>                             
                                <ul class="list-inline pull-right">
                                    <li><button type="button" class="default-btn prev-step">Atrás</button></li>
                                    <li><button type="button" class="default-btn next-step">Continuar</button></li>
                                </ul>
                            </div>

                            <div class="tab-pane" role="tabpanel" id="contacto">
