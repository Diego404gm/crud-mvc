<script>
   $(document).ready(function () {
    $('.wizard .nav-tabs li').removeClass('disabled');
    
    function llenarResumen() {
        $("#resumen-monto").text($("input[name='monto']").val());
        $("#resumen-descripcion").text($("input[name='descripcion']").val());
        $("#resumen-iva").text($("input[name='iva']").val());
        $("#resumen-total").text($("input[name='total']").val());
        $("#resumen-razon-social").text($("input[name='razon_social']").val());
        $("#resumen-rfc").text($("input[name='rfc']").val());
        $("#resumen-domicilio-fiscal").text($("input[name='domicilio_fiscal']").val());
        $("#resumen-telefono-facturacion").text($("input[name='telefono_facturacion']").val());
        $("#resumen-correo-facturacion").text($("input[name='correo_facturacion']").val());
        $("#resumen-nombre-contacto").text($("input[name='nombre_contacto']").val());
        $("#resumen-telefono-contacto").text($("input[name='telefono_contacto']").val());
        $("#resumen-celular-contacto").text($("input[name='celular_contacto']").val());
        $("#resumen-email-contacto").text($("input[name='email_contacto']").val());
    }

    $('.wizard .nav-tabs > li > a').on('click', function (e) {
        e.preventDefault(); 
        
        var $li = $(this).parent();
     
        $('.wizard .nav-tabs li').removeClass('active');
        $li.addClass('active');
        
        const targetId = $(this).attr('aria-controls');
        
        $('.tab-pane').removeClass('active');
        $('#' + targetId).addClass('active');
        
        if (targetId === "resumen") {
            llenarResumen();
        }
    });

    function validarCampos(tabId) {
        let isValid = true;
        $(`#${tabId} .form-control`).each(function () {
            if ($(this).val() === "") {
                $(this).addClass('is-invalid');
                const nextElement = $(this).next();
                nextElement[0].className = "show";
                isValid = false;
            } else {
                $(this).removeClass('is-invalid');
                const nextElement = $(this).next();
                nextElement[0].className = "hide";
            }
        });
        return isValid;
    }

    $(".next-step").click(function (e) {
        e.preventDefault();

        const activeTab = $('.wizard .nav-tabs li.active');
        const nextTab = activeTab.next();
        const tabId = activeTab.find("a").attr("aria-controls");

        if (validarCampos(tabId)) {
            activeTab.removeClass('active');
            $('#' + tabId).removeClass('active');
            
            nextTab.removeClass('disabled').addClass('active');
            
            const nextTabId = nextTab.find('a').attr('aria-controls');
            $('#' + nextTabId).addClass('active');

            if (nextTabId === "resumen") {
                llenarResumen();
            }
        } else {
            alert("Completa todos los campos obligatorios.");
        }
    });

    $(".prev-step").click(function (e) {
        e.preventDefault();

        const activeTab = $('.wizard .nav-tabs li.active');
        const prevTab = activeTab.prev();
        const currentTabId = activeTab.find("a").attr("aria-controls");

        activeTab.removeClass('active');
        $('#' + currentTabId).removeClass('active');

        prevTab.removeClass('disabled').addClass('active');

        const prevTabId = prevTab.find('a').attr('aria-controls');
        $('#' + prevTabId).addClass('active');
    });

    $(".finalizar-wizard").click(function (e) {
        e.preventDefault();

        const datos = {
            Id: parseInt($("#Id").val()) || 0,
            Monto: parseFloat($("#resumen-monto").text()),
            Descripcion: $("#resumen-descripcion").text(),
            IVA: parseFloat($("#resumen-iva").text()),
            Total: parseFloat($("#resumen-total").text()),
            RazonSocial: $("#resumen-razon-social").text(),
            RFC: $("#resumen-rfc").text(),
            DomicilioFiscal: $("#resumen-domicilio-fiscal").text(),
            Telefono: $("#resumen-telefono-facturacion").text(),
            CorreoElectronico: $("#resumen-correo-facturacion").text(),
            NombreContacto: $("#resumen-nombre-contacto").text(),
            TelefonoContacto: $("#resumen-telefono-contacto").text(),
            CelularContacto: $("#resumen-celular-contacto").text(),
            EmailContacto: $("#resumen-email-contacto").text()
        };

        $.ajax({
            url: '/Ventas/EditarInformacion',
            type: 'POST',
            data: JSON.stringify(datos),
            contentType: 'application/json; charset=utf-8',
            success: function (response) {
                alert(response.message);
                window.location.href = response.redirectUrl;
            },
            error: function () {
                alert("No se pudieron guardar los datos.");
            }
        });
    });
});
</script>


