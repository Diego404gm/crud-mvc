 @model IEnumerable<CrudNet7MVC.Models.Ventas>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resumen de Datos</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <style>
        .table-custom th, .table-custom td {
            text-align: center;
            vertical-align: middle;
        }

        .table-custom {
            margin-top: 20px;
        }

        table {
            border-collapse: collapse;
        }

        th {
            background: #eee;
        }

        th, td {
            border: 1px solid;
            padding: 10px;
        }


        .container {          
            overflow: auto;
            white-space: nowrap;
            margin-bottom: 10%;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="text-center">Resumen de Datos</h2>
        <table class="table table-bordered table-custom">
            <thead>
                <tr>
                    <th colspan="4" class="bg-light">Datos de Ventas</th>
                    <th colspan="4" class="bg-light">Datos de Facturación</th>
                    <th colspan="4" class="bg-light">Datos de Contacto</th>          
                    <th colspan="4" class="bg-light">Acciones</th>
                </tr>
                <tr>
                    <th class="bg-light">Monto</th>
                    <th class="bg-light">Descripción</th>
                    <th class="bg-light">IVA</th>
                    <th class="bg-light">Total</th>

                    <th class="bg-light">Razón Social</th>
                    <th class="bg-light">RFC</th>
                    <th class="bg-light">Domicilio Fiscal</th>
                    <th class="bg-light">Teléfono</th>

                    <th class="bg-light">Nombre</th>
                    <th class="bg-light">Teléfono</th>
                    <th class="bg-light">Celular</th>
                    <th class="bg-light">Correo</th>
                    <th class="bg-light">Editar</th>
                    <th class="bg-light">Eliminar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var venta in Model)
                {
                    <tr>
                        <td>@venta.Monto</td>
                        <td>@venta.Descripcion</td>
                        <td>@venta.IVA</td>
                        <td>@venta.Total</td>

                        <td>@venta.RazonSocial</td>
                        <td>@venta.RFC</td>
                        <td>@venta.DomicilioFiscal</td>
                        <td>@venta.Telefono</td>

                        <td>@venta.NombreContacto</td>
                        <td>@venta.TelefonoContacto</td>
                        <td>@venta.CelularContacto</td>
                        <td>@venta.EmailContacto</td>
                        <td>
                            <a class="btn btn-primary btn-sm btn-action" href="@Url.Action("EditarInformacion", "Ventas", new { id = venta.Id })">
                                Editar
                            </a>
                        </td>
                        <td>
                            <form method="post" action="@Url.Action("Eliminar", "Ventas", new { id = venta.Id })" onsubmit="return confirm('¿Quieres eliminar este registro?');">
                                <button type="submit" class="btn btn-danger btn-sm btn-action">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
